<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wanted_frame"
        android:layout_width="0dp"
        android:layout_height="@dimen/_175sdp"
        android:adjustViewBounds="true"
        android:src="@drawable/wanted_template_noimg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/wanted_profile_img"
        android:layout_width="0dp"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginHorizontal="@dimen/_12sdp"
        android:padding="@dimen/_8sdp"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="@+id/wanted_frame"
        app:layout_constraintEnd_toEndOf="@+id/wanted_frame"
        app:layout_constraintStart_toStartOf="@+id/wanted_frame"
        app:layout_constraintTop_toTopOf="@+id/wanted_frame"
        app:layout_constraintVertical_bias="0.35"
        tools:src="@drawable/profile_sample" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wanted_name"
        android:gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/wantedKorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintEnd_toEndOf="@+id/wanted_frame"
        app:layout_constraintStart_toStartOf="@+id/wanted_frame"
        app:layout_constraintTop_toBottomOf="@+id/wanted_profile_img"
        tools:text="정용우" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/wanted_cost"
        style="@style/wantedKorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="0.23"
        android:gravity="center"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintBottom_toBottomOf="@+id/wanted_frame"
        app:layout_constraintEnd_toEndOf="@+id/wanted_frame"
        app:layout_constraintStart_toStartOf="@+id/wanted_frame"
        app:layout_constraintTop_toBottomOf="@+id/wanted_name"
        tools:text="123,000" />

</androidx.constraintlayout.widget.ConstraintLayout>